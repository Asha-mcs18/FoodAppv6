    <TextView
        android:id="@+id/donorNameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="donorname"
        android:textColor="#03A9F4"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/donorNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/noOfPersonsField" />

    <TextView
        android:id="@+id/donorContactLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Donor Contact"
        android:textColor="#8BC34A"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donorNameLabel" />

    <TextView
        android:id="@+id/donorContactField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
